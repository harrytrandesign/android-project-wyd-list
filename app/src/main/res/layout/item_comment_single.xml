<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/small_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/xsmall_padding"
        android:paddingTop="@dimen/xsmall_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_display_usericon"
            android:layout_width="@dimen/xsmall_icon_size"
            android:layout_height="@dimen/xsmall_icon_size"/>

        <TextView
            android:id="@+id/comment_display_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/small_padding"
            android:paddingStart="@dimen/small_padding"
            android:text="@string/app_name"
            android:textSize="@dimen/small_font"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/comment_display_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ipsum_text_sample"
        android:textSize="@dimen/tiny_font"/>

    <TextView
        android:id="@+id/comment_display_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ipsum_text_sample"
        android:textSize="@dimen/mini_font"/>

</LinearLayout>